<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Specify a JDBC datasource -->
    <Resource
    name="jdbc/myDb"
    auth="Container"
    type="javax.sql.DataSource"
    username="root"
    password="0000"
    driverClassName="com.mysql.jdbc.Driver"
    url="jdbc:mysql://localhost:3306/db?autoReconnect=true"
    validationQuery="select 1"
    maxActive="1"
    maxIdle="4"/>

</Context>